{
    "env": {
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
        "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "4000",
        "DISABLE_COST_WARNINGS": "1",
        "DISABLE_TELEMETRY": "1",
        "DISABLE_AUTOUPDATER": "1",
        "DISABLE_ERROR_REPORTING": "1",
        "CLAUDE_WORKING_DIRECTORY": "/home/paul/wf-monorepo-new",
        "ANTHROPIC_API_URL": "http://localhost:8080"
    },
    "permissions": {
        "allow": [
            "Bash(npm run :*)",
            "Bash(git :*)",
            "Bash(node packages/devtools/src/automation/*)",
            "Edit",
            "Read(**)",
            "Write(**)",
            "TodoWrite"
        ],
        "deny": [
            "WebFetch",
            "WebSearch"
        ]
    },
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "tools:BashTool",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo 'Checking session startup guide...'"
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "matcher": "always",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo 'Referencing .kiro/steering.yaml and .claude/new-chat-session.md'"
                    }
                ]
            }
        ]
    }
}