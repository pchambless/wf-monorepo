{
  "layout": "flex",
  "components": [
    {
      "id": "columnSidebar",
      "type": "sidebar",
      "container": "column",
      "position": {
        "col": {
          "start": 1,
          "span": 2
        },
        "row": {
          "start": 1,
          "span": 10
        }
      },
      "props": {
        "title": "App Page Designer",
        "style": {
          "backgroundColor": "#f5f5f5",
          "borderRight": "1px solid #e0e0e0"
        }
      },
      "components": [
        {
          "id": "selectApp",
          "type": "select",
          "container": "inline",
          "position": {
            "row": 1,
            "col": 1
          },
          "props": {
            "title": "App Selector",
            "style": {
              "marginBottom": "16px",
              "width": "100%"
            }
          },
          "workflowTriggers": {
            "onLoad": [
              "execApps"
            ],
            "onChange": [
              {
                "action": "setVal",
                "param": "appID",
                "value": "{{selected.value}}"
              },
              {
                "action": "refresh",
                "targets": [
                  "selectPage"
                ]
              },
              {
                "action": "clearVals",
                "params": [
                  "pageID",
                  "eventTypeID"
                ]
              }
            ]
          }
        },
        {
          "id": "selectPage",
          "type": "select",
          "container": "inline",
          "position": {
            "row": 2,
            "col": 1
          },
          "props": {
            "title": "Page Selector",
            "style": {}
          },
          "workflowTriggers": {
            "onRefresh": [
              "execPages"
            ],
            "onChange": [
              {
                "action": "setVal",
                "param": "pageID",
                "value": "{{selected.value}}"
              },
              {
                "action": "refresh",
                "targets": [
                  "chartMermaid"
                ]
              },
              {
                "action": "clearVals",
                "params": [
                  "eventTypeID"
                ]
              }
            ]
          }
        },
        {
          "id": "btnGenPageConfig",
          "type": "button",
          "container": "inline",
          "position": {
            "row": 3,
            "col": 1
          },
          "props": {
            "title": "Generate Page Config Button",
            "style": {
              "marginTop": "16px",
              "width": "100%"
            }
          },
          "workflowTriggers": {
            "onClick": [
              {
                "action": "execGenPageConfig",
                "params": {
                  "appID": "{{getVal.appID}}",
                  "pageID": "{{getVal.pageID}}"
                }
              },
              {
                "action": "refresh",
                "targets": [
                  "tabMermaid",
                  "tabPageView"
                ]
              },
              {
                "action": "showNotification",
                "message": "Page config regenerated!"
              }
            ]
          }
        }
      ]
    },
    {
      "id": "columnComponents",
      "type": "column",
      "container": "column",
      "position": {
        "col": {
          "start": 3,
          "span": 2
        },
        "row": {
          "start": 1,
          "span": 10
        }
      },
      "props": {
        "title": "Component Choices",
        "style": {
          "borderRight": "1px solid #e0e0e0",
          "backgroundColor": "#fafafa",
          "padding": "12px"
        }
      },
      "workflowTriggers": {
        "onLoad": [
          "execTemplates"
        ],
        "onComponentSelect": [
          "selectComponentForDesign"
        ]
      },
      "components": [
        {
          "id": "gridComponentChoices",
          "type": "grid",
          "container": "inline",
          "position": {
            "row": 1,
            "col": 1
          },
          "props": {
            "title": "Available Components",
            "style": {}
          },
          "workflowTriggers": {
            "onRefresh": [
              "execEvent:componentTemplates"
            ],
            "onRowSelect": [
              "selectTemplate",
              "showTemplateDetail"
            ]
          }
        }
      ]
    },
    {
      "id": "tabsWorkArea",
      "type": "tab",
      "container": "tab",
      "position": {
        "col": {
          "start": 5,
          "span": 6
        },
        "row": {
          "start": 1,
          "span": 20
        }
      },
      "props": {
        "title": "Work Area Tabs",
        "style": {
          "backgroundColor": "#ffffff"
        }
      },
      "flex": 1,
      "components": [
        {
          "id": "tabMermaid",
          "type": "tab",
          "container": "tab",
          "position": {
            "row": 1,
            "col": 2
          },
          "props": {
            "title": "Mermaid Page",
            "style": {}
          },
          "workflowTriggers": {
            "onRefresh": [
              "refresh"
            ]
          },
          "components": [
            {
              "id": "mermaidChart",
              "props": {
                "style": {}
              }
            }
          ]
        },
        {
          "id": "tabEventDtl",
          "type": "tab",
          "container": "tab",
          "position": {
            "row": 1,
            "col": 3
          },
          "props": {
            "title": "Component Detail",
            "style": {}
          },
          "workflowTriggers": {
            "onComponentSelected": [
              "loadComponentCards",
              "refreshComponentDetail"
            ],
            "onCardChange": [
              "saveComponentChanges",
              "updatePageConfig"
            ]
          },
          "components": [
            {
              "id": "componentInfo",
              "type": "text",
              "container": "inline",
              "position": {
                "row": 1,
                "col": 1
              },
              "props": {
                "title": "Component Information",
                "style": {
                  "padding": "20px",
                  "backgroundColor": "#f0f4ff",
                  "borderRadius": "4px",
                  "textAlign": "center",
                  "color": "#666"
                }
              }
            },
            {
              "id": "dynamicCards",
              "type": "container",
              "container": "inline",
              "position": {
                "row": 2,
                "col": 1
              },
              "props": {
                "title": "Component Cards",
                "style": {
                  "marginTop": "20px"
                }
              }
            }
          ]
        },
        {
          "id": "tabPageView",
          "type": "tab",
          "container": "tab",
          "position": {
            "row": 1,
            "col": 4
          },
          "props": {
            "title": "Page Rendered",
            "style": {}
          },
          "workflowTriggers": {
            "onLoad": [
              "loadPagePreview"
            ],
            "onPageConfigChange": [
              "updatePreview"
            ]
          },
          "components": [
            {
              "id": "pagePreview",
              "type": "iframe",
              "container": "inline",
              "position": {
                "row": 1,
                "col": 1
              },
              "props": {
                "title": "Live Page Preview",
                "style": {
                  "width": "100%",
                  "height": "600px",
                  "border": "1px solid #e0e0e0",
                  "borderRadius": "4px",
                  "backgroundColor": "#ffffff"
                }
              }
            },
            {
              "id": "previewControls",
              "type": "container",
              "container": "inline",
              "position": {
                "row": 2,
                "col": 1
              },
              "props": {
                "style": {
                  "marginTop": "10px",
                  "padding": "10px",
                  "backgroundColor": "#f8f9fa",
                  "borderRadius": "4px"
                }
              },
              "components": [
                {
                  "id": "refreshPreview",
                  "type": "button",
                  "props": {
                    "style": {
                      "marginRight": "10px"
                    }
                  },
                  "workflowTriggers": {
                    "onClick": [
                      "refreshPagePreview"
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "title": "Page Design Studio",
  "routePath": "/studio",
  "purpose": "Three-column layout: app/page selector + component choices + tabbed work area",
  "cluster": "Page"
}