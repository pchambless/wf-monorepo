{
  "layout": "flex",
  "components": [
    {
      "id": "columnSidebar",
      "type": "sidebar",
      "container": "column",
      "position": {
        "col": {
          "start": 1,
          "span": 2
        },
        "row": {
          "start": 1,
          "span": 10
        }
      },
      "props": {
        "title": "App Page Designer",
        "style": {
          "backgroundColor": "#f5f5f5",
          "borderRight": "1px solid #e0e0e0"
        }
      },
      "workflowTriggers": {
        "onAppChange": [
          "loadAppEventTypes",
          "refreshPageList",
          "clearSelection"
        ],
        "onPageSelect": [
          "loadPageEventTypes",
          "refreshHierarchy"
        ],
        "onEventTypeSelect": [
          "loadEventTypeDetail",
          "highlightInHierarchy"
        ]
      },
      "components": [
        {
          "id": "selectApp",
          "type": "select",
          "container": "inline",
          "position": {
            "row": 1,
            "col": 1
          },
          "props": {
            "title": "App Selector",
            "style": {
              "marginBottom": "16px",
              "width": "100%"
            }
          },
          "workflowTriggers": {
            "onRefresh": [
              "execApps"
            ],
            "onChange": [
              {
                "action": "setVal",
                "param": "appID"
              },
              {
                "action": "refresh",
                "targets": [
                  "selectPage"
                ]
              },
              {
                "action": "clearVals",
                "params": [
                  "pageID",
                  "eventTypeID"
                ]
              }
            ]
          }
        },
        {
          "id": "selectPage",
          "type": "select",
          "container": "inline",
          "position": {
            "row": 2,
            "col": 1
          },
          "props": {
            "title": "Page Selector",
            "style": {}
          },
          "workflowTriggers": {
            "onRefresh": [
              "execPages"
            ],
            "onChange": [
              {
                "action": "setVal",
                "param": "pageID"
              },
              {
                "action": "refresh",
                "targets": [
                  "eventTypeHierarchy"
                ]
              },
              {
                "action": "clearVals",
                "params": [
                  "eventTypeID"
                ]
              }
            ]
          }
        },
        {
          "id": "eventTypeHierarchy",
          "type": "accordion",
          "container": "accordion",
          "position": {
            "row": 3,
            "col": 1
          },
          "props": {
            "title": "Accordion List of eventTypes",
            "style": {}
          },
          "span": {
            "cols": 1,
            "rows": 10
          }
        }
      ]
    },
    {
      "id": "columnComponents",
      "type": "column",
      "container": "column",
      "position": {
        "col": {
          "start": 3,
          "span": 2
        },
        "row": {
          "start": 1,
          "span": 10
        }
      },
      "props": {
        "title": "Component Choices",
        "style": {
          "borderRight": "1px solid #e0e0e0",
          "backgroundColor": "#fafafa",
          "padding": "12px"
        }
      },
      "workflowTriggers": {
        "onLoad": [
          "loadAvailableTemplates"
        ],
        "onComponentSelect": [
          "selectComponentForDesign"
        ]
      },
      "components": [
        {
          "id": "gridComponentChoices",
          "type": "grid",
          "container": "inline",
          "position": {
            "row": 1,
            "col": 1
          },
          "props": {
            "title": "Available Components",
            "style": {}
          },
          "workflowTriggers": {
            "onRefresh": [
              "execEvent:componentTemplates"
            ],
            "onRowSelect": [
              "selectTemplate",
              "showTemplateDetail"
            ]
          }
        }
      ]
    },
    {
      "id": "tabsWorkArea",
      "type": "tabs",
      "container": "tab",
      "position": {
        "col": {
          "start": 5,
          "span": 6
        },
        "row": {
          "start": 1,
          "span": 20
        }
      },
      "props": {
        "title": "Work Area Tabs",
        "style": {
          "backgroundColor": "#ffffff"
        }
      },
      "workflowTriggers": {
        "onTabChange": [
          "saveCurrentWork",
          "loadTabContent"
        ],
        "onLoad": [
          "initializeWorkArea"
        ]
      },
      "flex": 1,
      "components": [
        {
          "id": "tabLeafDtl",
          "type": "tab",
          "container": "tab",
          "position": {
            "row": 1,
            "col": 1
          },
          "props": {
            "title": "Leaf Detail",
            "style": {}
          },
          "workflowTriggers": {
            "onEventTypeSelect": [
              {
                "action": "loadCards",
                "category": "dynamic"
              }
            ]
          }
        }
      ]
    }
  ],
  "title": "Page Design Studio",
  "routePath": "/studio",
  "purpose": "Three-column layout: app/page selector + component choices + tabbed work area",
  "cluster": "Page",
  "workflowTriggers": {
    "onLoad": {
      "action": "refresh",
      "targets": [
        "selectApp",
        "selectPage",
        "gridComponentChoices"
      ]
    }
  }
}