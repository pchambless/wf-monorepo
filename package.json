{
  "name": "whatsfresh-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/wf-client",
    "apps/wf-server",
    "apps/wf-plan-management",
    "apps/wf-studio",
    "packages/*"
  ],
  "scripts": {
    "analyze:dead-code": "node analysis-n-document/genDocs/analyze-dead-code.js",
    "analyze:config": "node analysis-n-document/genDocs/analyze-config-flows.js",
    "analyze:events": "node analysis-n-document/genDocs/genEventTypes.js",
    "analyze:integration": "node analysis-n-document/genDocs/analyze-integration-flows.js",
    "analyze:all": "npm run analyze-deps && npm run analyze:dead-code && npm run analyze:config && npm run analyze:events && npm run analyze:integration",
    "analyze-deps": "madge . --json > analysis-n-document/genDocs/output/monorepo/raw-madge.json && node analysis-n-document/genDocs/enhance-madge.js",
    "docs:generate": "npm run analyze:all",
    "generate-samples": "node packages/devtools/src/automation/data/genSampleData.js",
    "route-task": "node cli/generate-prompt.js",
    "generate-prompt": "node cli/generate-prompt.js",
    "dev-client": "turbo run dev --filter=wf-client",
    "dev-plans": "turbo run start --filter=wf-plan-management",
    "dev-studio": "turbo run start --filter=wf-studio",
    "dev:all": "turbo run dev",
    "server": "turbo run dev --filter=wf-server",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "generate-directives": "node packages/devtools/src/automation/page/genDirectives.js",
    "generate-page-maps": "turbo run generate-page-maps",
    "generate-docs": "turbo run generate-docs",
    "generate-visuals": "node tools/page-generator/genVisualDocs.js",
    "generate:all": "turbo run generate:all",
    "generate:optimized": "node tools/page-generator/genOptimizedConfigs.js",
    "generate:event-types": "node analysis-n-document/genDocs/genEventTypes.js",
    "scaffold:section": "node packages/devtools/src/docs/sections/scaffoldRun.js",
    "run:section": "node packages/devtools/src/docs/sections/sectionRun.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/parser": "^7.28.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@types/bun": "latest",
    "@types/vscode": "^1.102.0",
    "babel-loader": "^10.0.0",
    "dependency-cruiser": "^16.10.2",
    "madge": "^8.0.0",
    "minimist": "^1.2.8",
    "module-alias": "^2.2.3",
    "turbo": "^2.5.4",
    "vscode": "^1.1.37"
  },
  "_moduleAliases": {
    "@packages": "./packages",
    "@apps": "./apps"
  },
  "dependencies": {
    "@mui/lab": "^7.0.0-beta.14",
    "@react-pdf/renderer": "^4.3.0",
    "ccflare": "^0.0.2",
    "handlebars": "^4.7.8",
    "json-stringify-pretty-compact": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
