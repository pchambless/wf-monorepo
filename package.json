{
  "name": "whatsfresh-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "generate-samples": "node packages/devtools/src/automation/data/genSampleData.js",
    "dev": "npm run --workspace=wf-client start",
    "server": "npm run --workspace=wf-server dev",
    "build": "npm run generate-page-maps && npm run generate-docs && npm run generate-visuals && npm run --workspaces build",
    "test": "npm run --workspaces test",
    "lint": "npm run --workspaces lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate-directives": "node packages/devtools/src/automation/page/genDirectives.js",
    "generate-page-maps": "node packages/devtools/src/automation/page/genPageMaps.js",
    "generate-docs": "node packages/devtools/src/docs/automation/genMasterDocs.js",
    "generate-visuals": "node tools/page-generator/genVisualDocs.js",
    "generate:all": "npm run generate-samples && npm run generate-directives && npm run generate-page-maps && npm run generate-docs && npm run generate-visuals",
    "generate:optimized": "node tools/page-generator/genOptimizedConfigs.js",
    "scaffold:section": "node packages/devtools/src/docs/sections/scaffoldRun.js",
    "run:section": "node packages/devtools/src/docs/sections/sectionRun.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@storybook/addon-essentials": "^9.0.0-alpha.12",
    "@storybook/react": "^9.0.9",
    "@storybook/react-webpack5": "^9.0.9",
    "babel-loader": "^10.0.0",
    "dependency-cruiser": "^16.10.2",
    "minimist": "^1.2.8",
    "module-alias": "^2.2.3",
    "storybook": "^9.0.9"
  },
  "_moduleAliases": {
    "@packages": "./packages",
    "@apps": "./apps"
  }
}
